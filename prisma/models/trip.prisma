enum TripStatus {
  PENDING
  ONGOING
  CONFIRMED
  COMPLETED
  CANCELLED
}

enum TransportType {
  AIR
  ROAD
  RAIL
  SEA
}

model Trip {
  id               String   @id @default(uuid()) @db.Uuid
  travellerId      String   @db.Uuid
  traveller        User     @relation(fields: [travellerId], references: [id])

  from             String
  to               String
  departureDate    DateTime
  returnDate       DateTime?

  luggageWeight    Int


  tripStatus       TripStatus @default(PENDING)
  transportType    TransportType
  pricePerUnit     Float
  currency         String?
  tripNotes        String

  tripDurationDays Int?

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
